
@model CreateChefVM

<div class="col-lg-8 col-xlg-9 col-md-12">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal form-material" method="post" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-group mb-4">
                    <label asp-for="Name" class="col-md-12 p-0"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Name" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Surname" class="col-md-12 p-0"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Surname" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Image" class="col-md-12 p-0"></label>
                    <div class="col-md-12 border-bottom p-0">
                        <input asp-for="Image" class="form-control p-0 border-0">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                </div>
               
                <div class="form-group mb-4">
                    <label class="col-sm-12">Select Job</label>

                    <div class="col-sm-12 border-bottom">
                        <select class="form-select shadow-none p-0 border-0 form-control-line" asp-for="JobId">
                            @foreach(var item in Model.Jobs){

                            <option value="@item.Id">@item.Name</option>
                            }
                            
                        </select>
                    </div>
                </div>
                <div class="form-group mb-4">
                    <div class="col-sm-12">
                        <button class="btn btn-success">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>